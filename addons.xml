<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="metadata.filmweb.pl"
       name="Filmweb"
       version="2.0.1"
       provider-name="smuto, Regss">
  <requires>
    <import addon="xbmc.metadata" version="2.1.0"/>
    <import addon="metadata.common.themoviedb.org" version="2.8.0"/>
    <import addon="metadata.common.imdb.com" version="2.6.0"/>
    <import addon="plugin.video.youtube" version="2.9.1" optional="true"/>
  </requires>
  <extension point="xbmc.metadata.scraper.movies"
             language="pl"
             library="filmweb.xml"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Filmweb Movie Scraper</summary>
    <summary lang="hu">Filmweb filmadat leolvasó</summary>
    <summary lang="kr">Filmweb 영화 스크래퍼</summary>
    <summary lang="pl">Scraper filmowy Filmweb.pl</summary>
    <summary lang="pt">Scraper de filmes FilmWeb</summary>
    <description lang="en">Download Movie information from www.filmweb.pl</description>
    <description lang="hu">Film információk letöltése a www.filmweb.pl webhelyről</description>
    <description lang="kr">www.filmweb.pl 에서 영화 정보 다운로드</description>
    <description lang="pl">Filmweb - łeb pełen filmów! to największy polski serwis filmowy i druga największa baza filmowa na świecie. Drapacz ten korzysta z jednej z czterech stron głównych „Bazy Filmwebu” stworzonej przez użytkowników. Jak czegoś brakuje to mamy IMDb - ten portal jest tutaj obecny. Fanarty z themoviedb.org - te piękne tla to zasługa utalentowanych ludzi tworzących tę bazę. </description>
    <description lang="pt">Descarregar informação de filmes de www.filmweb.pl</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.unofficial.polish" name="Polskie wtyczki" version="2.0.0" provider-name="smuto">
